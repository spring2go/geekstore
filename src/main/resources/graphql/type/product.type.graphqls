type Product implements Node {
    id: ID!
    createdAt: DateTime!
    updatedAt: DateTime!
    name: String!
    slug: String!
    description: String!
    featuredAsset: Asset
    assets: [Asset!]!
    variants: [ProductVariant!]!
    optionGroups: [ProductOptionGroup!]!
    facetValues: [FacetValue!]!
    collections: [Collection!]!
    enabled: Boolean! # admin only
}

type ProductList implements PaginatedList {
    items: [Product!]!
    totalItems: Int!
}

type ProductVariant implements Node {
    id: ID!
    product: Product!
    productId: ID!
    createdAt: DateTime!
    updatedAt: DateTime!
    sku: String!
    name: String!
    featuredAsset: Asset
    assets: [Asset!]!
    price: Int!
    options: [ProductOption!]!
    facetValues: [FacetValue!]!
    enabled: Boolean! # admin only
    stockOnHand: Int! # admin only
    trackInventory: Boolean! # admin only
    stockMovements(options: StockMovementListOptions): StockMovementList! # admin only
}